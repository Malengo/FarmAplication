{% extends 'base.html.twig' %}

{% block title %}Cow index{% endblock %}

{% block body %}
    <h1>Cow index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Weight</th>
                <th>MilkAmount</th>
                <th>FoodAmount</th>
                <th>Born</th>
                <th>IsAlive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cow in cows %}
            <tr>
                <td>{{ cow.id }}</td>
                <td>{{ cow.weight }}</td>
                <td>{{ cow.milkAmount }}</td>
                <td>{{ cow.foodAmount }}</td>
                <td>{{ cow.born ? cow.born|date('Y-m-d') : '' }}</td>
                <td>{{ cow.isAlive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_cow_show', {'id': cow.id}) }}">show</a>
                    <a href="{{ path('app_cow_edit', {'id': cow.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cow_new') }}">Create new</a>
{% endblock %}
