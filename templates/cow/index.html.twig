{% extends 'base.html.twig' %}

{% block title %}Cow index{% endblock %}

{% block body %}
    <h1>Lista de Bois </h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Peso</th>
                <th>Quantidade de Leite produzido por Semana</th>
                <th>Quantidade de comida ingerida por Semana</th>
                <th>Data de Nascimento</th>
                <th>Abatido</th>
                <th>Pronto pro Abate</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for cow in cows %}
            <tr>
                <td>{{ cow.id }}</td>
                <td>{{ cow.weight }}</td>
                <td>{{ cow.milkAmount }}</td>
                <td>{{ cow.foodAmount }}</td>
                <td>{{ cow.born ? cow.born|date('d-m-Y') : '' }}</td>
                <td>{{ cow.isAlive ? 'Não' : 'Sim' }}</td>
                <td>{{ cow.isAbate ? 'Sim' : 'Não' }}</td>
                <td>
                <div class="container">
                    <a class="btn btn-primary" href="{{ path('app_cow_show', {'id': cow.id}) }}">Informações</a>
                    <a class="btn btn-danger" href="{{ path('app_cow_edit', {'id': cow.id}) }}">Editar</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Não existe bois na Fazenda</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  
{% endblock %}
